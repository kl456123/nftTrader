  "scripts": {
    "test": "mocha",
    "compile": "typechain --target ethers-v5 --out-dir ./src/typechain './abis/**/*.json'",
    "compile-asset": "typechain --target ethers-v5 --out-dir ./src/typechain/asset './node_modules/@openzeppelin/contracts/build/contracts/?(ERC721|ERC1155).json'",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts}\""
  }
